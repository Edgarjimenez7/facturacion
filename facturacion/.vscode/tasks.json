{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build-backend",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build",
				"Backend/FacturacionAPI.csproj"
			],
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build"
		},
		{
			"label": "serve-frontend",
			"type": "shell",
			"command": "python",
			"args": [
				"-m",
				"http.server",
				"8080"
			],
			"isBackground": true,
			"group": "build"
		}
	]
}